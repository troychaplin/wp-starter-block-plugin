{
	"name": "idc-blocks",
	"version": "0.1.0",
	"description": "A custom block plugin for International Documents Canada",
	"author": "Troy Chaplin",
	"license": "GPL-2.0-or-later",
	"main": "build/idc-block-editor.js",
	"scripts": {
		"build": "npm run build:wp-scripts && npm run build:block-css",
		"build:wp-scripts": "wp-scripts build --output-path=build/scripts --webpack-copy-php",
		"build:block-css": "tailwindcss -i ./src/idc-blocks.css -o ./build/styles/idc-blocks.css --postcss --minify",
		"format": "wp-scripts format 'src/**/*.{js,jsx,ts,tsx,css,scss}'",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "concurrently 'npm run start:wp-scripts' 'npm run start:block-css'",
		"start:wp-scripts": "wp-scripts start --output-path=build/scripts --webpack-copy-php",
		"start:block-css": "tailwindcss -i ./src/idc-blocks.css -o ./build/styles/idc-blocks.css --postcss --minify --watch",
		"build-blocks-manifest": "wp-scripts build-blocks-manifest",
		"postbuild": "npm run build-blocks-manifest",
		"clean": "rm -rf node_modules ; rm package-lock.json ; npm install",
		"prepare": "husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@troychaplin79/idc-frontend-ui": "^0.2.1",
		"@troychaplin79/idc-tailwind-theme": "^1.0.1",
		"@wordpress/blocks": "^14.4.1",
		"@wordpress/dom-ready": "^4.15.0",
		"@wordpress/scripts": "^30.8.1",
		"autoprefix": "^1.0.1",
		"concurrently": "^9.1.2",
		"husky": "^9.1.7",
		"postcss": "^8.4.49",
		"postcss-import": "^16.1.0",
		"postcss-prefix-selector": "^2.1.0",
		"tailwindcss": "^3.4.17",
		"webpack": "^5.97.1",
		"webpack-cli": "^6.0.1"
	}
}
